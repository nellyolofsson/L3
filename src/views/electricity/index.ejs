<div class="container1">
  <div class="content">
    <h1>Elpriser för idag</h1>
    <label for="region" class="region-label">Välj region</label>
    <select id="region" name="region">
        <option value="region1">Luleå /SE1/ Norra Sverige</option>
        <option value="region2">Sundsvall /SE2/ Norra Mellansverige</option>
        <option value="region3">Stockholm /SE3/ Södra Mellansverige </option>
        <option value="region4">Malmö /SE4/ Södra Sverige</option>
    </select>

    <% for (const regionKey in electricityPriceToday) { %>
      <div class="region-data-container" id="regionData<%= regionKey %>" style="display: none;">
        <p>Genomsnitt pris: <%= electricityPriceToday[regionKey].averagePrice %></p>
        <p>Min pris: <%= electricityPriceToday[regionKey].minPrice %></p>
        <p>Max pris: <%= electricityPriceToday[regionKey].maxPrice %></p>
        <p>Median pris: <%= electricityPriceToday[regionKey].medianPrice %></p>
        <p>Standardavvikelse pris: <%= electricityPriceToday[regionKey].standardDeviation %></p>
      </div>
    <% } %>

    <div id="chartContainer">
      <canvas id="electricityPriceChart" width="800" height="400" data-hour-data='<%= JSON.stringify(hourData) %>'></canvas>
    </div>

    <button id="toggleView">
      Tabell
    </button>
  

  <div id="tableContainer">
    <table>
      <thead>
        <tr>
          <th>Tid</th>
          <th>SEK per kWh</th>
        </tr>
      </thead>
      <tbody id="tableBody">
        <!-- Table data for the selected region will be displayed here -->
      </tbody>
    </table>
  </div>
</div>
</div>
