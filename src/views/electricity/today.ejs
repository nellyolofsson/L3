<div class="container1">
  <div class="content">
    <h1>Elpriser för idag</h1>
    <label for="region" class="region-label">Välj region</label>
    <select id="region" name="region">
        <option value="region1">Luleå /SE1/ Norra Sverige</option>
        <option value="region2">Sundsvall /SE2/ Norra Mellansverige</option>
        <option value="region3">Stockholm /SE3/ Södra Mellansverige </option>
        <option value="region4">Malmö /SE4/ Södra Sverige</option>
    </select>

    <% for (const regionKey in electricityPriceToday) { %>
      <table class="region-data-table" id="regionData<%= regionKey %>" style="display: none;">
        <thead>
          <tr>
            <th>Pris</th>
            <th>SEK per kWh</th>
          </tr>
        </thead>
        <tr>
          <td>Genomsnitt</td>
          <td><%= electricityPriceToday[regionKey].averagePrice %></td>
        </tr>
        <tr>
          <td>Minimun</td>
          <td><%= electricityPriceToday[regionKey].minPrice %></td>
        </tr>
        <tr>
          <td>Maximum</td>
          <td><%= electricityPriceToday[regionKey].maxPrice %></td>
        </tr>
        <tr>
          <td>Median</td>
          <td><%= electricityPriceToday[regionKey].medianPrice %></td>
        </tr>
        <tr>
          <td>Standardavvikelse</td>
          <td><%= electricityPriceToday[regionKey].standardDeviation %></td>
        </tr>
      </table>
    <% } %>

    <div id="chartContainer">
      <canvas id="electricityPriceChart" width="800" height="400" data-hour-data='<%= JSON.stringify(hourData) %>'></canvas>
    </div>

    <button id="toggleView">
      Tabell
    </button>

  <div id="tableContainer" style="display: none;">
    <table>
      <thead>
        <tr>
          <th>Tid</th>
          <th>SEK per kWh</th>
        </tr>
      </thead>
      <tbody id="tableBody">
      </tbody>
    </table>
  </div>
</div>
</div>
